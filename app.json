{
  "_dependencies": "IMPORTANT: Before building, update bundleIdentifier, package, and projectId with your own values",
  "expo": {
    "name": "Voice AI Companion",
    "slug": "voice-ai-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/cara-logo.png",
    "scheme": "voiceai",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/cara-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F2F3F4"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourcompany.voiceai",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice conversations"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/cara-logo.png",
        "backgroundColor": "#0F2D4D"
      },
      "package": "com.yourcompany.voiceai",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "This app needs microphone access for voice conversations"
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/cara-logo.png",
          "color": "#A77693",
          "defaultChannel": "default"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
